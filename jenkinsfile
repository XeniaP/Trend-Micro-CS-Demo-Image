pipeline {
  agent any
  stages {
    stage('Checkout Source') {
      steps {
        git url:'https://github.com/XeniaP/Trend-Micro-Smart-Check-Demo-Image.git', branch:'master'
      }
    }
    stage("Build image") {
        steps {
            script {
                demo-app = docker.build("demo-env/demo-app:${env.BUILD_ID}")
            }
        }
    }
    stage("Push image") {
        steps {
            script {
                docker.withRegistry('', 'dockerhub') {
                        myapp.push("latest")
                        myapp.push("${env.BUILD_ID}")
                }
            }
        }
    }
  }
}
